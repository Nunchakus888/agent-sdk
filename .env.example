# LLM API Keys
OPENAI_API_KEY=sk-xxx
ANTHROPIC_API_KEY=sk-ant-xxx
GOOGLE_API_KEY=xxx

# Default Model
DEFAULT_MODEL=gpt-4o

# Task-Specific Models (Optional)
# 意图识别模型（推荐使用快速、低成本模型）
INTENT_MATCHING_MODEL=gpt-4o-mini

# 内容生成模型（推荐使用高质量模型）
CONTENT_GENERATION_MODEL=gpt-4o

# 工作流规划模型（推荐使用复杂逻辑理解能力强的模型）
WORKFLOW_PLANNING_MODEL=gpt-4o

# LLM决策模型（SOP驱动迭代，推荐使用平衡性能和成本的模型）
LLM_DECISION_MODEL=gpt-4o

# 响应生成模型（最终用户响应，推荐使用高质量模型）
RESPONSE_GENERATION_MODEL=gpt-4o

# Database Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=workflow_agent

POSTGRESQL_URI=postgresql://user:password@localhost:5432/workflow_agent

REDIS_URL=redis://localhost:6379

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO

# Optional: Workflow Agent Settings
MAX_ITERATIONS=5
ITERATION_STRATEGY=sop_driven
